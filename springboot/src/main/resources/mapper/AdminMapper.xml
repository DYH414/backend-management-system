<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springboot.mapper.AdminMapper">
    <insert id="insert" parameterType="org.example.springboot.entity.Admin">
        insert into `admin`(username,password,role,name)
        values (#{username},#{password},#{role},#{name})
    </insert>
    <update id="updateById" parameterType="org.example.springboot.entity.Admin">
        update `admin` set username=#{username},password=#{password},role=#{role},name=#{name}
        where id=#{id}
    </update>


    <select id="selectAll" resultType="org.example.springboot.entity.Admin">
        select *from admin
        <where>
            <if test="name!=null">name like concat('%',#{name},'%')
            </if>
        </where>
        order by id desc
    </select>



</mapper>